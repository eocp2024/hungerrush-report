{
  "name": "hunger-rush-summary",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:keep-awake": "node keep-awake.js & next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "start:keep-awake": "node keep-awake.js & next start -H 0.0.0.0 -p 3000",
    "lint": "next lint",
    "setup": "npx playwright install chromium",
    "deploy": "vercel deploy --prod",
    "gcloud:build": "gcloud builds submit --tag gcr.io/$(gcloud config get-value project)/hunger-rush-app",
    "gcloud:deploy": "gcloud run deploy hunger-rush-app --image gcr.io/$(gcloud config get-value project)/hunger-rush-app --platform managed --region us-central1 --memory 2Gi --timeout 15m --cpu 1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.14.1",
    "@deepgram/sdk": "^3.11.2",
    "ai": "^2.2.35",
    "autoprefixer": "^10.4.21",
    "date-fns": "^3.6.0",
    "firebase": "^11.5.0",
    "framer-motion": "^12.5.0",
    "lucide-react": "^0.483.0",
    "next": "14.2.7",
    "openai": "^4.28.0",
    "playwright": "^1.42.1",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "replicate": "^0.25.2",
    "tailwindcss": "^3.3.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "typescript": "^5"
  }
}
